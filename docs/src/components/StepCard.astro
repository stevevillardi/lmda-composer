---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  number: number;
  title: string;
  icon?: string;
}

const { number, title, icon } = Astro.props;
---

<div class="step-card">
  <div class="step-header">
    <div class="step-number">{number}</div>
    {icon && <Icon name={icon} size="1.25rem" class="step-icon" />}
    <h3 class="step-title">{title}</h3>
  </div>
  <div class="step-content">
    <slot />
  </div>
</div>

<style>
  .step-card {
    position: relative;
    padding: 1.25rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    margin-bottom: 1rem;
  }

  .step-card::before {
    content: '';
    position: absolute;
    left: 2.25rem;
    top: 3.5rem;
    bottom: -1rem;
    width: 2px;
    background: var(--sl-color-gray-5);
  }

  .step-card:last-child::before {
    display: none;
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 700;
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .step-icon {
    color: var(--sl-color-accent);
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: var(--sl-color-white);
  }

  .step-content {
    margin-left: 2.75rem;
    font-size: 0.9375rem;
    color: var(--sl-color-gray-2);
  }

  .step-content :global(p) {
    margin: 0.5rem 0;
  }

  .step-content :global(ol),
  .step-content :global(ul) {
    margin: 0.5rem 0;
    padding-left: 1.25rem;
  }

  .step-content :global(code) {
    background: var(--sl-color-gray-6);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
  }
</style>



