---
import { 
  Download, Settings, Code, Terminal, CheckCircle2, Play, Save, 
  Target, Activity, Search, FileText, Upload, Wrench
} from '@lucide/astro';

interface Props {
  number: number;
  title: string;
  icon?: string;
}

const { number, title, icon } = Astro.props;

// Map icon names to Lucide components
const iconComponents: Record<string, any> = {
  download: Download,
  setting: Settings,
  settings: Settings,
  code: Code,
  terminal: Terminal,
  check: CheckCircle2,
  success: CheckCircle2,
  play: Play,
  save: Save,
  target: Target,
  activity: Activity,
  search: Search,
  document: FileText,
  upload: Upload,
  wrench: Wrench,
};

const IconComponent = icon ? iconComponents[icon] : null;
---

<div class="step-card">
  <div class="step-header">
    <span class="step-number">{number}</span>
    {IconComponent && (
      <span class="step-icon">
        <IconComponent size={18} />
      </span>
    )}
    <h3 class="step-title">{title}</h3>
  </div>
  <div class="step-content">
    <slot />
  </div>
</div>

<style>
  .step-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: var(--card-radius, 0.75rem);
    padding: 1.25rem;
    background: var(--card-bg, var(--sl-color-bg-nav));
    margin-bottom: 1.25rem;
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.75rem;
    height: 1.75rem;
    border-radius: 50%;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 700;
    font-size: 0.8125rem;
    flex-shrink: 0;
  }

  .step-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--sl-color-accent);
  }

  .step-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    color: var(--sl-color-white);
  }

  .step-content {
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
    padding-left: 2.5rem;
  }

  .step-content :global(p) {
    margin: 0.375rem 0;
  }

  .step-content :global(ul),
  .step-content :global(ol) {
    margin: 0.375rem 0;
    padding-left: 1.25rem;
  }

  .step-content :global(li) {
    margin: 0.25rem 0;
  }

  .step-content :global(code) {
    background: var(--sl-color-gray-6);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
  }
</style>
