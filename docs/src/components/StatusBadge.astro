---
import { CheckCircle2, XCircle, AlertTriangle, Loader2, Clock } from '@lucide/astro';

interface Props {
  status: 'success' | 'error' | 'warning' | 'running' | 'timeout';
  label?: string;
  size?: 'sm' | 'md';
}

const { status, label, size = 'md' } = Astro.props;

// Color mapping matching src/editor/constants/icons.tsx
const statusConfig = {
  success: {
    color: '#22c55e', // green-500
    defaultLabel: 'Complete'
  },
  error: {
    color: '#ef4444', // red-500
    defaultLabel: 'Error'
  },
  warning: {
    color: '#f59e0b', // amber-500
    defaultLabel: 'Warning'
  },
  running: {
    color: '#3b82f6', // blue-500
    defaultLabel: 'Running'
  },
  timeout: {
    color: '#ef4444', // red-500
    defaultLabel: 'Timeout'
  }
};

const config = statusConfig[status];
const displayLabel = label ?? config.defaultLabel;
const iconSize = size === 'sm' ? 14 : 16;
---

<span class:list={['status-badge', size]} style={`--status-color: ${config.color};`}>
  <span class="status-icon">
    {status === 'success' && <CheckCircle2 size={iconSize} />}
    {status === 'error' && <XCircle size={iconSize} />}
    {status === 'warning' && <AlertTriangle size={iconSize} />}
    {status === 'running' && <Loader2 size={iconSize} class="animate-spin" />}
    {status === 'timeout' && <Clock size={iconSize} />}
  </span>
  <span class="status-label">{displayLabel}</span>
</span>

<style>
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    background: color-mix(in srgb, var(--status-color) 15%, transparent);
    color: var(--status-color);
    font-weight: 500;
  }

  .status-badge.sm {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
  }

  .status-badge.md {
    font-size: 0.8125rem;
  }

  .status-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .status-label {
    line-height: 1;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .status-icon :global(.animate-spin) {
    animation: spin 1s linear infinite;
  }
</style>
