---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  status: 'success' | 'error' | 'warning' | 'running' | 'timeout';
  label?: string;
  size?: 'sm' | 'md';
}

const { status, label, size = 'md' } = Astro.props;

// Color mapping matching src/editor/constants/icons.tsx
const statusConfig = {
  success: {
    color: '#22c55e', // green-500
    icon: 'approve-check-circle',
    defaultLabel: 'Complete'
  },
  error: {
    color: '#ef4444', // red-500
    icon: 'close',
    defaultLabel: 'Error'
  },
  warning: {
    color: '#f59e0b', // amber-500
    icon: 'warning',
    defaultLabel: 'Warning'
  },
  running: {
    color: '#3b82f6', // blue-500
    icon: 'rocket',
    defaultLabel: 'Running'
  },
  timeout: {
    color: '#ef4444', // red-500
    icon: 'close',
    defaultLabel: 'Timeout'
  }
};

const config = statusConfig[status];
const displayLabel = label ?? config.defaultLabel;
---

<span class={`status-badge ${size}`} style={`--status-color: ${config.color};`}>
  <Icon name={config.icon} size={size === 'sm' ? '0.875rem' : '1rem'} />
  <span class="status-label">{displayLabel}</span>
</span>

<style>
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    background: color-mix(in srgb, var(--status-color) 15%, transparent);
    color: var(--status-color);
    font-weight: 500;
  }

  .status-badge.sm {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
  }

  .status-badge.md {
    font-size: 0.8125rem;
  }

  .status-label {
    line-height: 1;
  }
</style>



