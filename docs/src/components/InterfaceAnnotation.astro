---
interface Props {
  imageSrc: string;
  imageAlt: string;
  markers?: Array<{
    number: number;
    x: string;
    y: string;
    label: string;
  }>;
}

const { imageSrc, imageAlt, markers = [] } = Astro.props;
---

<div class="interface-annotation">
  <div class="annotation-container">
    <img src={imageSrc} alt={imageAlt} class="annotation-image" />
    {markers.map((marker) => (
      <div 
        class="annotation-marker"
        style={`left: ${marker.x}; top: ${marker.y};`}
        title={marker.label}
      >
        {marker.number}
      </div>
    ))}
  </div>
  {markers.length > 0 && (
    <div class="annotation-legend">
      {markers.map((marker) => (
        <div class="legend-item">
          <span class="legend-number">{marker.number}</span>
          <span class="legend-label">{marker.label}</span>
        </div>
      ))}
    </div>
  )}
</div>

<style>
  .interface-annotation {
    margin: 1.5rem 0;
  }

  .annotation-container {
    position: relative;
    display: inline-block;
    width: 100%;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .annotation-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .annotation-marker {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 700;
    font-size: 0.75rem;
    transform: translate(-50%, -50%);
    cursor: help;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--sl-color-bg);
    transition: transform 0.15s ease;
  }

  .annotation-marker:hover {
    transform: translate(-50%, -50%) scale(1.2);
  }

  .annotation-legend {
    margin-top: 1rem;
    padding: 1rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-number {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 700;
    font-size: 0.6875rem;
    flex-shrink: 0;
  }

  .legend-label {
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
  }
</style>
