---
import { Check, X, Chrome, Globe } from '@lucide/astro';
import { Icon } from '@astrojs/starlight/components';

interface Props {
  name: string;
  icon: string;
  supported: boolean;
  note?: string;
}

const { name, icon, supported, note } = Astro.props;
---

<div class:list={['browser-card', { supported, unsupported: !supported }]}>
  <div class="browser-header">
    <Icon name={icon} size="1.5rem" />
    <span class="browser-name">{name}</span>
    <span class:list={['status-badge', { yes: supported, no: !supported }]}>
      {supported ? (
        <>
          <Check size={12} />
          <span>Supported</span>
        </>
      ) : (
        <>
          <X size={12} />
          <span>Not Supported</span>
        </>
      )}
    </span>
  </div>
  {note && (
    <p class="browser-note">{note}</p>
  )}
  <slot />
</div>

<style>
  .browser-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 1rem 1.25rem;
    background: var(--sl-color-bg-nav);
    margin-bottom: 1rem;
  }

  .browser-card.supported {
    border-left: 3px solid var(--sl-color-green);
  }

  .browser-card.unsupported {
    border-left: 3px solid var(--sl-color-gray-4);
    opacity: 0.8;
  }

  .browser-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .browser-name {
    font-weight: 600;
    font-size: 1.1rem;
    flex: 1;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
  }

  .status-badge.yes {
    background: color-mix(in srgb, #22c55e 15%, transparent);
    color: #22c55e;
  }

  .status-badge.no {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-2);
  }

  .browser-note {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
    margin: 0.5rem 0 0 0;
  }
</style>
