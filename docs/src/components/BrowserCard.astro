---
import { Check, X } from '@lucide/astro';
import { Icon } from '@astrojs/starlight/components';

interface Props {
  name: string;
  icon: string;
  supported: boolean;
  note?: string;
}

const { name, icon, supported, note } = Astro.props;
---

<div class:list={['browser-card', { supported, unsupported: !supported }]}>
  <div class="browser-header">
    <Icon name={icon} size="1.5rem" />
    <span class="browser-name">{name}</span>
    <span class:list={['status-badge', { yes: supported, no: !supported }]}>
      {supported ? (
        <>
          <Check size={12} />
          <span>Supported</span>
        </>
      ) : (
        <>
          <X size={12} />
          <span>Not Supported</span>
        </>
      )}
    </span>
  </div>
  {note && (
    <p class="browser-note">{note}</p>
  )}
  <div class="browser-content">
    <slot />
  </div>
</div>

<style>
  .browser-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: var(--card-radius, 0.75rem);
    padding: 1rem 1.25rem;
    background: var(--card-bg, var(--sl-color-bg-nav));
    margin-bottom: 1rem;
    border-left-width: 3px;
    border-left-style: solid;
  }

  .browser-card.supported {
    border-left-color: var(--sl-color-success);
  }

  .browser-card.unsupported {
    border-left-color: var(--sl-color-gray-4);
    opacity: 0.75;
  }

  .browser-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .browser-name {
    font-weight: 600;
    font-size: 1rem;
    flex: 1;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .status-badge.yes {
    background: color-mix(in srgb, var(--sl-color-success) 15%, transparent);
    color: var(--sl-color-success);
  }

  .status-badge.no {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-3);
  }

  .browser-note {
    font-size: 0.8125rem;
    color: var(--sl-color-warning);
    margin: 0.5rem 0 0 0;
    font-weight: 500;
  }

  .browser-content {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
    line-height: 1.5;
  }

  .browser-content :global(p) {
    margin: 0.5rem 0 0 0;
  }

  .browser-content :global(ol) {
    margin: 0.5rem 0 0 0;
    padding-left: 1.25rem;
  }

  .browser-content :global(li) {
    margin: 0.25rem 0;
  }

  .browser-content :global(code) {
    background: var(--sl-color-gray-6);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
  }
</style>
