---
import type { Props } from '@astrojs/starlight/props';
import { Image } from 'astro:assets';
import { 
  Rocket, Package, Search, Wrench, Globe, FileText, History, Zap,
  Target, Database, Terminal, Layers
} from '@lucide/astro';
import logo from '../assets/icon128.png';

const isLandingPage = Astro.url.pathname === '/lmda-composer/' || Astro.url.pathname === '/lmda-composer';
---

{isLandingPage ? (
  <div class="landing-hero">
    <!-- Hero Section -->
    <section class="hero-section">
      <Image src={logo} alt="LMDA Composer" width={80} height={80} class="hero-logo" />
      <h1 class="hero-title">LMDA Composer</h1>
      <p class="hero-subtitle">
        A focused workspace for LogicMonitor scripting. Create, test, and ship LogicModules faster.
      </p>
      <div class="cta-buttons">
        <a href="/lmda-composer/getting-started/installation/" class="cta-button primary">
          Get Started
        </a>
        <a href="/lmda-composer/getting-started/quick-start/" class="cta-button secondary">
          View Documentation
        </a>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- How It Works -->
    <section class="steps-section">
      <h2>How It Works</h2>
      <div class="steps-grid">
        <div class="step-item">
          <div class="step-number">1</div>
          <h3>Connect to Your Portal</h3>
          <p>Log into LogicMonitor in your browser. LMDA Composer automatically detects your active sessions.</p>
        </div>
        <div class="step-item">
          <div class="step-number">2</div>
          <h3>Write & Test Scripts</h3>
          <p>Use the Monaco-powered editor to write Groovy or PowerShell scripts with full syntax highlighting.</p>
        </div>
        <div class="step-item">
          <div class="step-number">3</div>
          <h3>Validate & Commit</h3>
          <p>Run scripts on collectors, validate parsed output, and commit changes back to LogicMonitor.</p>
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- Features -->
    <section class="features-section">
      <h2>Features</h2>
      <div class="feature-grid">
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Rocket size={16} /></span> Script Execution</h3>
          <p>Run Groovy and PowerShell scripts on any collector with parsed output and validation.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Database size={16} /></span> Create LogicModules</h3>
          <p>Build new modules with a guided wizard supporting all 7 module types.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Package size={16} /></span> LogicModule Browser</h3>
          <p>Browse, search, and import scripts from DataSources, ConfigSources, and more.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Search size={16} /></span> Module Search</h3>
          <p>Search across all module scripts and datapoints to find code patterns.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Target size={16} /></span> AppliesTo Toolbox</h3>
          <p>Test and validate AppliesTo expressions with instant feedback on matching resources.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Globe size={16} /></span> API Explorer</h3>
          <p>Explore the LogicMonitor REST API using your active session with endpoint docs.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><FileText size={16} /></span> Module Details Editor</h3>
          <p>Edit module metadata, datapoints, config checks, and LogSource configurations.</p>
        </div>
        <div class="feature-card">
          <h3><span class="feature-icon-inline"><Terminal size={16} /></span> Debug Commands</h3>
          <p>Run collector debug commands with visual health check reports.</p>
        </div>
      </div>
    </section>

    <!-- Disclaimer -->
    <div class="disclaimer-box">
      <p>
        <strong>Community Project:</strong> LMDA Composer is an independent community project and is not affiliated with, endorsed by, or officially connected to LogicMonitor, Inc. LogicMonitor is a registered trademark of LogicMonitor, Inc.
      </p>
    </div>
  </div>
) : (
  <slot />
)}

<style>
  .landing-hero {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Hero Section */
  .hero-section {
    padding: 3rem 1rem 2rem;
    text-align: center;
  }

  .hero-logo {
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, var(--sl-color-white) 0%, var(--sl-color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--sl-color-gray-3);
    max-width: 550px;
    margin: 0 auto 1.5rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-button.primary {
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
  }

  .cta-button.primary:hover {
    filter: brightness(1.1);
  }

  .cta-button.secondary {
    background: transparent;
    border: 1px solid var(--sl-color-gray-5);
    color: var(--sl-color-white);
  }

  .cta-button.secondary:hover {
    border-color: var(--sl-color-accent);
    color: var(--sl-color-accent);
  }

  /* Section Divider */
  .section-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--sl-color-gray-5), transparent);
    margin: 2rem 0;
  }

  /* Steps Section */
  .steps-section {
    padding: 1rem 0 2rem;
  }

  .steps-section h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .steps-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .step-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem 1rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 700;
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
  }

  .step-item h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
    color: var(--sl-color-white);
  }

  .step-item p {
    font-size: 0.8125rem;
    color: var(--sl-color-gray-3);
    margin: 0;
    line-height: 1.5;
  }

  /* Features Section */
  .features-section {
    padding: 1rem 0 2rem;
  }

  .features-section h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-nav);
    transition: border-color 0.2s ease;
  }

  .feature-card:hover {
    border-color: var(--sl-color-gray-4);
  }

  .feature-card h3 {
    font-size: 0.9375rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
    color: var(--sl-color-white);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .feature-icon-inline {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 0.25rem;
    background: color-mix(in srgb, var(--sl-color-accent) 15%, transparent);
    color: var(--sl-color-accent);
    flex-shrink: 0;
  }

  .feature-card p {
    font-size: 0.8125rem;
    color: var(--sl-color-gray-3);
    margin: 0;
    line-height: 1.5;
  }

  /* Disclaimer */
  .disclaimer-box {
    margin: 2rem auto;
    max-width: 700px;
    padding: 1rem 1.25rem;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-nav);
    text-align: left;
  }

  .disclaimer-box strong {
    color: var(--sl-color-accent);
  }

  .disclaimer-box p {
    font-size: 0.8125rem;
    color: var(--sl-color-gray-3);
    margin: 0;
    line-height: 1.5;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 2rem 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-button {
      width: 100%;
      max-width: 260px;
      justify-content: center;
    }
  }
</style>
